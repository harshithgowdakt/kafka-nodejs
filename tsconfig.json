{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2016",
    "moduleResolution": "node",
    "rootDir": "src",
    "outDir": "dist",
    "allowJs": true,
    "removeComments": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "typeRoots": [
    "./node_modules/@types"
  ],
  "types": [
    "node"
  ],
  "include": [
    "src/*.ts",
    "src/*.js",
    "src/*/**/*.ts",
    "src/*/**/*.js"
  ],
  "exclude": [
    "node_modules",
    "src/**/*.d.ts",
  ]
}